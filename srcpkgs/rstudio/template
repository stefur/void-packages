do_install() {
	vmkdir usr/bin

	vcopy lib usr
	vcopy share usr

	vlicense lib/rstudio/LICENSE

	ln -sf "/usr/lib/rstudio/rstudio" "${DESTDIR}/usr/bin/rstudio"

}
